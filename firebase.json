{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/report",
        "destination": "/report.html"
      },
      {
        "source": "/debt",
        "destination": "/debt.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
